<UserControl x:Class="Almoxarifado.Views.Util.ProductSearchModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Almoxarifado.Views.Util"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:converter="clr-namespace:Almoxarifado.Converter"
             mc:Ignorable="d" 
             Width="700" Height="500">

    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Estilo para o spinner de loading -->
        <Style x:Key="LoadingSpinnerStyle" TargetType="Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Style.Resources>
                <Storyboard x:Key="SpinnerAnimation">
                    <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(RotateTransform.Angle)"
                                     From="0" To="360"
                                     Duration="0:0:1"
                                     RepeatBehavior="Forever"/>
                </Storyboard>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="Visibility" Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource SpinnerAnimation}"/>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔍" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Pesquisar Produto" 
                          FontSize="18" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <Button x:Name="BtnClose"
                    Content="✕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    Click="BtnClose_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand"/>
        </Grid>

        <!-- Filtros de pesquisa -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <telerik:RadAutoSuggestBox x:Name="TxtSearch"
                                       Grid.Column="0"
                                       WatermarkContent="Digite o código ou descrição do produto..."
                                       QuerySubmitted="TxtSearch_QuerySubmitted"
                                       TextChanged="TxtSearch_TextChanged"
                                       QueryButtonVisibility="Collapsed"/>

            <telerik:RadButton x:Name="BtnSearch"
                               Grid.Column="1"
                               Content="Buscar"
                               Width="80"
                               Margin="10,0,0,0"
                               Click="BtnSearch_Click"/>

            <telerik:RadButton x:Name="BtnClear"
                               Grid.Column="2"
                               Content="Limpar"
                               Width="80"
                               Margin="5,0,0,0"
                               Click="BtnClear_Click"/>
        </Grid>

        <!-- Lista de produtos -->
        <telerik:RadGridView x:Name="ProductsGrid"
                             Grid.Row="2"
                             IsReadOnly="True"
                             AutoGenerateColumns="False"
                             SelectionMode="Single"
                             CanUserInsertRows="False"
                             ShowGroupPanel="False"
                             MouseDoubleClick="ProductsGrid_MouseDoubleClick"
                             SelectionChanged="ProductsGrid_SelectionChanged">

            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="Código" 
                                            DataMemberBinding="{Binding codcompladicional}" 
                                            Width="50"/>
                <telerik:GridViewDataColumn Header="Planilha" 
                                            DataMemberBinding="{Binding planilha}" 
                                            Width="150"/>
                <telerik:GridViewDataColumn Header="Descrição" 
                                            DataMemberBinding="{Binding descricao_completa}" 
                                            Width="*"/>
                <telerik:GridViewDataColumn Header="Unidade" 
                                            DataMemberBinding="{Binding unidade}" 
                                            Width="50"/>
                <!--<telerik:GridViewDataColumn Header="Preço" 
                                            DataMemberBinding="{Binding custo, StringFormat=C}" 
                                            Width="100"
                                            TextAlignment="Right"/>-->
                <!--<telerik:GridViewDataColumn Header="Estoque" 
                                            DataMemberBinding="{Binding saldo_estoque}" 
                                            Width="80"
                                            TextAlignment="Right"/>-->
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

        <!-- Status e botões de ação -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock x:Name="TxtStatus" 
                           Text="Digite para pesquisar produtos..."
                           FontStyle="Italic"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <telerik:RadButton x:Name="BtnSelect"
                                   Content="Selecionar"
                                   Width="100"
                                   Height="35"
                                   Margin="0,0,10,0"
                                   Click="BtnSelect_Click"
                                   IsEnabled="False"/>

                <telerik:RadButton x:Name="BtnCancel"
                                   Content="Cancelar"
                                   Width="100"
                                   Height="35"
                                   Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>


</UserControl>
