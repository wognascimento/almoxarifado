<UserControl x:Class="Almoxarifado.Views.Cadastros.SenhaCadeado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Almoxarifado.Views.Cadastros"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">

    <Grid>

        <telerik:RadGridView 
            ItemsSource="{Binding Senhas}"  
            ShowGroupPanel="False"
            AutoGenerateColumns="False" 
            NewRowPosition="Bottom" 
            GroupRenderMode="Flat" 
            RowValidated="RadGridView_RowValidated">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding cod_linha_cadeado}" Header="#" IsReadOnly="True"/>
                <telerik:GridViewComboBoxColumn 
                    Header="BOLSA" 
                    DataMemberBinding="{Binding nome_bolsa}" 
                    SelectedValueMemberPath="descricao"
                    DisplayMemberPath="descricao"
                    ItemsSource="{Binding Bolsas}"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding cadeado}" Header="CADEADO"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding senha}" Header="SENHA"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding montador}" Header="MONTADOR"/>
                <telerik:GridViewComboBoxColumn 
                    Header="SIGLA" 
                    DataMemberBinding="{Binding sigla}" 
                    SelectedValueMemberPath="sigla_serv"
                    DisplayMemberPath="sigla_serv"
                    ItemsSource="{Binding Aprovados}"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding lacre}" Header="LACRE"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

    </Grid>
    
</UserControl>
