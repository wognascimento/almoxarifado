<UserControl x:Class="Almoxarifado.Views.Cadastros.BolsaFerramenta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Almoxarifado.Views.Cadastros" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>


        <telerik:RadGridView 
            x:Name="manualGridView" 
            Margin="5"
            ItemsSource="{Binding Bolsas}"  
            ShowGroupPanel="False"
            AutoGenerateColumns="False" 
            NewRowPosition="Bottom" 
            GroupRenderMode="Flat" 
            CellValidating="OnCellValidatingDados"
            RowEditEnded="OnRowInsertDados"  >
            <telerik:RadGridView.Columns>
                <!--<telerik:GridViewDataColumn DataMemberBinding="{Binding codigo_tipobolsa}" Header="ID" IsEnabled="False"/>-->
                <telerik:GridViewDataColumn DataMemberBinding="{Binding descricao}" Header="Descrição"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>


    </Grid>
</UserControl>
